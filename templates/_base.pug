-
  let basePath = '';
  let pages;
  let entryPoint;

block pageInit

-
  const page = pages[entryPoint];
  const keywords = page.keywords || [];
  keywords.push('jwt', 'cryptography');

doctype html
html(lang='en', prefix="og:http://ogp.me/ns#")
  head
    meta(charset='utf-8')
    meta(name='language', content='en')
    meta(name='viewport', content='width=device-width,initial-scale=1,shrink-to-fit=no')
    meta(name='author', content='Alex Ostrovski')
    meta(name='keywords', content=keywords.join(', '))
    meta(name='description', content=page.description)
    meta(name='og:title', content=page.title)
    meta(name='og:description', content=page.description)
    meta(name='og:type', content='article')

    script(type='application/ld+json').
      {
        "@context": "https://schema.org/",
        "@type": "#{(entryPoint === '') ? 'WebSite' : 'WebPage'}",
      "author": {
        "@type": "Person",
        "name": "Alex Ostrovski"
      },
      "headline": "#{page.title}",
      "description": "#{page.description}"
      }

    title #{page.title} | Just Web Tokens

    //- External dependencies
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    //- TODO: extract only necessary icons
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css', crossorigin='anonymous')
    link(rel='stylesheet', href=`${basePath}/main.css`)
  body
    block body

    -
      const pageScripts = page.scripts || [];
    if pageScripts.includes('jquery')
      script(src='https://code.jquery.com/jquery-3.6.0.slim.min.js', integrity='sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=', crossorigin='anonymous')
    if pageScripts.includes('bootstrap')
      script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p', crossorigin='anonymous')
    if pageScripts.includes('self')
      script(src=`${basePath}/${(entryPoint === '') ? 'index' : entryPoint }.js`)
